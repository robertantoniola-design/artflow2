{
    "name": "artflow/artflow2",
    "description": "Sistema profissional de gestão artística - ArtFlow 2.0",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "php database/migrate.php",
        "migrate:fresh": "php database/migrate.php fresh",
        "seed": "php database/seed.php"
    }
}
